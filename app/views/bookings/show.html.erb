<% if logged_in? and @booking %>
    <div class="bs-docs-section clearfix">
      <div class="row">
        <div class="col-lg-12">
          <div class="page-header">
            <h1>Booking Details</h1>
          </div>

          <div class="col-lg-10 col-lg-offset-1">
            <table class="table table-striped table-hover table-bordered">
              <tbody>
              <tr>
                <td class="col-lg-5">Room Number</td>
                <td class="active"><%= @booking.room %></td>
              </tr>
              <tr>
                <td>Email</td>
                <td class="active"><%= @booking.email %></td>
              </tr>
              <tr>
                <td>Start</td>
                <td class="active"><%= @booking.start %></td>
              </tr>
              <tr>
                <td>End</td>
                <td class="active"><%= @booking.end %></td>
              </tr>
              <tr>
                <td>Active</td>
                <% if @booking.end.blank? %>
                    <td class="success">Yes</td>
                <% else %>
                    <td class="danger">No</td>
                <% end %>
              </tr>
              <tr>
                <td>Team</td>
                <td class="active"><%= @booking.team %></td>
              </tr>
              </tbody>
            </table>
            <% if @booking.end.blank? %>
                <%= link_to 'Release', booking_path(@booking), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-default" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <br>
<% end %>