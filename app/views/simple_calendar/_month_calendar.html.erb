<div class="simple-calendar">
  <div class="calendar-heading">
    <%= link_to '<i class="glyphicon glyphicon-chevron-left"></i>'.html_safe, calendar.url_for_previous_view %>
    <span class="h4 calendar-title"><%= t('date.month_names')[start_date.month] %> <%= start_date.year %></span>
    <%= link_to '<i class="glyphicon glyphicon-chevron-right"></i>'.html_safe, calendar.url_for_next_view %>
  </div>

  <table class="table table-hover-td table-bordered">
    <thead>
    <tr>
      <% date_range.slice(0, 7).each do |day| %>
          <th><%= t('date.abbr_day_names')[day.wday] %></th>
      <% end %>
    </tr>
    </thead>

    <tbody>
    <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
              <%= content_tag :td, class: calendar.td_classes_for(day) do %>
                  <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(block) %>
                      <% capture_haml(day, sorted_events.fetch(day, []), &block) %>
                  <% else %>
                      <% block.call day, sorted_events.fetch(day, []) %>
                  <% end %>
              <% end %>
          <% end %>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
